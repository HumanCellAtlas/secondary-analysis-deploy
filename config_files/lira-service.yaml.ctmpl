apiVersion: v1
kind: Service
metadata:
    name: {{ env "LIRA_SERVICE_NAME" }}
spec:
    selector:
        app: {{ env "LIRA_APPLICATION_NAME" }}
        component: {{ env "LIRA_APPLICATION_NAME" }}
    type: NodePort
    selector:
        app: {{ env "LIRA_APPLICATION_NAME" }}
        component: {{ env "LIRA_APPLICATION_NAME" }}
    ports:
        - name: http
          port: 8080
          targetPort: 8080
          protocol: TCP
